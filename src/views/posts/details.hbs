
        <main>

            <section id="details-page">

                <div class="main_card">
                    <div class="card_left">
                        <div class="card_datails">

                            <h1>Name: {{post.name}}</h1>
                            <h3>Created by an author: {{post.owner.firstName}} {{post.owner.lastName}}</h3>
                            <div class="card_character">
                                <p class="card-species">Species: {{post.species}}</p>
                                <p class="card-skin">Skin colour: {{post.skinColor}}k</p>
                                <p class="card-eye">Eye Colour: {{post.eyeColor}}</p>
                            </div>

                            <p class="disc">{{post.description}} </p>

                            <div class="social-btn">
                            {{#if isOwner }}
                                <a href="/posts/details/{{post._id}}/edit" class="edit-btn">Edit</a>
                                <a href="/posts/details/{{post._id}}/delete" class="del-btn">Delete</a>
                            {{/if}}
                             {{#if isAuthenticated}}
                                {{#unless isOwner}}
                                {{#if isVoted}}
                                <p class="thanks-for-vote">Thanks For Voting</p>
                                {{else}}
                                <a href="/posts/details/{{post._id}}/votes" class="vote-up">Vote</a>
                                {{/if}}
                                <!-- logged in user who has already voted-->
                                {{/unless}}
                            </div>
                            {{/if}}

                            
                        </div>
                    </div>
                    <div class="card_right">
                        <img src="{{post.image}}"
                            alt="{{name}}">
                    </div>
                </div>

            </section>

            <section id="votes">
                <div class="vote-info">
                    <div class="card_left">
                        <div class="card_datails">
                            <h1>Votes</h1>
                            <div class="card_vote">
                                <p class="PV">Total rating of votes: {{votes}}</p>
                            </div>
                            {{#if votes}}
                            <p class="disc">People who voted for the post - {{votedUsers}}</p>
                            {{else}}
                            <p class="disc">People who voted for the post - No one has voted yet.</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </section>

        </main>


   